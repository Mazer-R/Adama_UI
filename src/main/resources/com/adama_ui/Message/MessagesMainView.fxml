<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adama_ui.Message.MessagesMainViewController"
            styleClass="root-pane">

   <!-- Menú lateral izquierdo -->
   <left>
      <VBox fx:id="messageMenu"
            spacing="15"
            alignment="TOP_CENTER"
            styleClass="side-menu"
            prefWidth="220">

         <padding>
            <Insets top="20" left="10" right="10" bottom="10"/>
         </padding>

         <Button fx:id="btnCompose"
                 text="REDACTAR"
                 maxWidth="180"
                 styleClass="action-button"/>

         <Button fx:id="btnInbox"
                 text="RECIBIDOS"
                 maxWidth="180"
                 styleClass="action-button"/>

         <Button fx:id="btnSent"
                 text="ENVIADOS"
                 maxWidth="180"
                 styleClass="action-button"/>

         <Button fx:id="btnHistory"
                 text="HISTÓRICO"
                 maxWidth="180"
                 styleClass="action-button"/>
      </VBox>
   </left>

   <!-- Panel de contenido central -->
   <center>
      <StackPane fx:id="contentArea"
                 styleClass="root-pane"/>
   </center>

   <!-- Pie de página con botón de volver -->
   <bottom>
      <HBox alignment="CENTER_LEFT"
            spacing="10"
            styleClass="footer-bar">
         <padding>
            <Insets top="10" bottom="10" left="20" right="20"/>
         </padding>
         <Button text="← VOLVER"
                 onAction="#onBack"
                 styleClass="action-button"/>
      </HBox>
   </bottom>
</BorderPane>
