<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.adama_ui.OrderViewController"
      spacing="15"
      alignment="TOP_LEFT"
      styleClass="root-pane"
      VBox.vgrow="ALWAYS">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Filtros -->
    <Label text="Buscar productos disponibles por:" styleClass="section-title" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="comboProductType"
                  promptText="Tipo de producto"
                  prefWidth="250"
                  styleClass="input-combo"/>

        <ComboBox fx:id="comboBrand"
                  promptText="Marca del producto"
                  prefWidth="250"
                  styleClass="input-combo"/>

        <Button text="BUSCAR"
                onAction="#onSearchByFilters"
                styleClass="action-button"
                prefHeight="32"
                minHeight="32"
                maxHeight="32"
                prefWidth="100"/>
    </HBox>

    <!-- Lista de productos -->
    <ListView fx:id="listViewProducts"
              VBox.vgrow="ALWAYS"
              styleClass="styled-list"/>
</VBox>
