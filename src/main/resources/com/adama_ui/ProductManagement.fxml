<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adama_ui.ProductManagementController"
            styleClass="root-pane"> <!-- ✅ Fondo gestionado por el CSS -->

    <!-- Menú lateral izquierdo -->
    <left>
        <VBox spacing="10"
              alignment="TOP_LEFT"
              style="-fx-background-color: #e0e0e0;"> <!-- 🎯 Fondo claro aplicado directamente -->
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button fx:id="btnAddProduct"
                    text="ADD PRODUCT"
                    maxWidth="150"/>

            <Button fx:id="btnManageProduct"
                    text="PRODUCT MANAGEMENT"
                    maxWidth="150"/>
        </VBox>
    </left>

    <!-- Contenido central -->
    <center>
        <VBox spacing="15" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Filtros -->
            <Label text="Search product by:" styleClass="section-title"/>
            <HBox spacing="10">
                <TextField fx:id="fieldIdOrTag"
                           promptText="Enter ID or tag"
                           prefWidth="250"/>
                <Button text="SEARCH"
                        onAction="#onSearchByIdOrTag"/>
            </HBox>

            <Label text="or select:" styleClass="section-title"/>
            <ComboBox fx:id="comboProductType"
                      promptText="Product type"
                      prefWidth="250"/>
            <ComboBox fx:id="comboBrand"
                      promptText="Brand"
                      prefWidth="250"/>
            <Button text="SEARCH"
                    onAction="#onSearchByFilters"
                    maxWidth="100"/>

            <!-- Lista de productos -->
            <ListView fx:id="listViewProducts"
                      prefHeight="400"
                      styleClass="styled-list"/>
        </VBox>
    </center>

    <!-- Pie con botón de volver -->
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="← VOLVER"
                    onAction="#onBack"
                    styleClass="action-button"/>
        </HBox>
    </bottom>
</BorderPane>
