<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.adama_ui.MainScreenController"
            fx:id="mainContainer"
            styleClass="root-pane">

    <top>
        <HBox fx:id="navBar"
              spacing="10"
              alignment="CENTER_LEFT"
              style="-fx-background-color: #f4f4f4; -fx-padding: 10;"> <!-- ✅ conservado -->

            <!-- ✅ Tus botones tal como los tenías -->
            <HBox fx:id="navButtons" spacing="10">
                <Button text="Home" onAction="#loadHomeView"/>
                <Button text="Solicitudes" onAction="#loadOrderView"/>
                <Button text="Messages" onAction="#loadMessagesView"/>
                <Button text="Productos" onAction="#loadWarehouseView"/>
                <Button text="Gestión Usuarios" onAction="#loadUserView"/>

                <Button text="Entregas" />

                <Button text="Test" onAction="#loadSettingsView"/>

            </HBox>

            <!-- Espaciador flexible -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- ✅ ToggleButton con clase temática intacta -->
            <ToggleButton fx:id="themeToggleButton"
                          onAction="#onToggleTheme"
                          styleClass="theme-toggle">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </ToggleButton>
        </HBox>
    </top>

    <center>
        <!-- El contenido dinámico se cargará aquí desde los controladores -->
    </center>

    <bottom>
        <HBox alignment="CENTER"
              styleClass="theme-toggle">
            <Label text="© 2025 ADAMA Project (IFP)"
                   styleClass="theme-toggle"/>
        </HBox>
    </bottom>
</BorderPane>
