<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adama_ui.Order.OrderMainViewController"
            styleClass="root-pane">

    <left>
        <VBox fx:id="profileMenu"
              spacing="10"
              alignment="TOP_LEFT"
              style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button fx:id="btnOrder"
                    text="SOLICITUD"
                    maxWidth="150"/>

            <Button fx:id="btnTracking"
                    text="SEGUIMIENTO SOLICITUDES"
                    maxWidth="150"/>

            <Button fx:id="btnManage"
                    text="GESTION SOLICITUDES"
                    maxWidth="150"/>

            <Button fx:id="btnHistory"
                    text="HISTORIAL SOLICITUDES"
                    maxWidth="150"/>
        </VBox>
    </left>

    <!-- Contenido central -->
    <center>
        <StackPane fx:id="contentArea"/>
    </center>

    <!-- Pie con botón de volver -->
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="← VOLVER"
                    onAction="#onBack"
                    styleClass="action-button"/>
        </HBox>
    </bottom>
</BorderPane>
