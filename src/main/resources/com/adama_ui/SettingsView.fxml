<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.adama_ui.SettingsViewController"
      alignment="CENTER"
      spacing="20" prefHeight="600.0"
      prefWidth="800.0"
      style="-fx-border-color: black; -fx-border-width: 2px; -fx-border-radius: 5px">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../../ExternalResources/Adama_Logo.png"/>
    </ImageView>

    <Label text="API Testing Page" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <VBox spacing="15" alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Button text="Retrieve All Products" onAction="#getAllProducts" prefWidth="300" prefHeight="40" 
                style="-fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Retrieve Product by ID" onAction="#getProductById" prefWidth="300" prefHeight="40"
                    style="-fx-font-size: 14; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
            <TextField fx:id="productIdField" promptText="Enter Product ID" prefWidth="150"/>
        </HBox>

        <Button text="Create New Product" onAction="#createProduct" prefWidth="300" prefHeight="40"
                style="-fx-font-size: 14; -fx-background-color: #FF9800; -fx-text-fill: white;"/>

        <Button text="Update Product" onAction="#updateProduct" prefWidth="300" prefHeight="40"
                style="-fx-font-size: 14; -fx-background-color: #9C27B0; -fx-text-fill: white;"/>

        <Button text="Delete Product" onAction="#deleteProduct" prefWidth="300" prefHeight="40"
                style="-fx-font-size: 14; -fx-background-color: #F44336; -fx-text-fill: white;"/>
        <HBox>
            <Button text="Filter Products" onAction="#getFilteredProducts" prefWidth="300" prefHeight="40"
                    style="-fx-font-size: 14; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
            <TextField fx:id="typeField" promptText="Type" />
            <TextField fx:id="brandField" promptText="Brand" />
        </HBox>
    </VBox>

    <TextArea fx:id="resultArea" prefHeight="150" prefWidth="700" editable="false" 
              style="-fx-font-family: 'Courier New'; -fx-font-size: 12;"/>
</VBox>
