<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adama_ui.Product.AddProductController"
            maxWidth="Infinity" maxHeight="Infinity">

    <!-- Lateral izquierdo con botones -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="AÑADIR PRODUCTOS" maxWidth="150" onAction="#onAddProduct" />
            <Button text="GESTIÓN DE PRODUCTOS" maxWidth="150"
                    onAction="#onGoToProductManagement"
                    style="-fx-border-color: green; -fx-border-width: 2;" />
        </VBox>
    </left>

    <!-- Formulario -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="AÑADIR NUEVO PRODUCTO" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <Label text="NOMBRE/MODELO DEL PRODUCTO*" />
            <TextField fx:id="fieldName" promptText="Nombre o modelo del producto" />

            <Label text="DECRIPCIÓN DEL PRODUCTO" />
            <TextArea fx:id="fieldDescription" promptText="Descripción del producto (opcional)" prefRowCount="3" />

            <Label text="TIPO DE PRODUCTO*" />
            <ComboBox fx:id="comboType" promptText="Selecciona el tipo" prefWidth="250" />

            <Label text="MARCA DEL PRODUCTO*" />
            <ComboBox fx:id="comboBrand" promptText="Selecciona la marca" prefWidth="250" />


            <Button text="GUARDAR PRODUCTO NUEVO" onAction="#onSaveProduct"
                    style="-fx-background-color: #00c000; -fx-text-fill: white;" />
        </VBox>
    </center>

    <!-- Botón volver -->
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="← VOLVER" onAction="#onBack" />
        </HBox>
    </bottom>
</BorderPane>
