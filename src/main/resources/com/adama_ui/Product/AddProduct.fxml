<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adama_ui.Product.AddProductController"
            maxWidth="Infinity" maxHeight="Infinity">

    <!-- Lateral izquierdo con botones -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="ADD PRODUCT" maxWidth="150" onAction="#onAddProduct" />
            <Button text="PRODUCT MANAGEMENT" maxWidth="150"
                    onAction="#onGoToProductManagement"
                    style="-fx-border-color: green; -fx-border-width: 2;" />
        </VBox>
    </left>

    <!-- Formulario -->
    <center>
        <VBox spacing="15" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Add New Product" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <Label text="Product Name*" />
            <TextField fx:id="fieldName" promptText="Enter product name" />

            <Label text="Product Description" />
            <TextArea fx:id="fieldDescription" promptText="Enter description (optional)" prefRowCount="3" />

            <Label text="Product Type*" />
            <ComboBox fx:id="comboType" promptText="Select type" prefWidth="250" />

            <Label text="Product Brand*" />
            <ComboBox fx:id="comboBrand" promptText="Select brand" prefWidth="250" />

            <Label text="Product Model*" />
            <TextField fx:id="fieldModel" promptText="Enter product model" />

            <Button text="SAVE PRODUCT" onAction="#onSaveProduct"
                    style="-fx-background-color: #00c000; -fx-text-fill: white;" />
        </VBox>
    </center>

    <!-- Botón volver -->
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="← VOLVER" onAction="#onBack" />
        </HBox>
    </bottom>
</BorderPane>
