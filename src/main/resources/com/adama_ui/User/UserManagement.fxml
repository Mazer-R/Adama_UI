<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adama_ui.User.UserManagementController"
            maxWidth="Infinity" maxHeight="Infinity">

    <!-- Lateral izquierdo con botones -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="ADD USER" maxWidth="150" onAction="#onAddUser" />
            <Button text="USER MANAGEMENT" maxWidth="150"
                    onAction="#onGoToUserManagement"
                    style="-fx-border-color: green; -fx-border-width: 2;" />
        </VBox>
    </left>

    <!-- Formulario de filtro -->
    <center>
        <VBox spacing="15" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Filter Users" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Filtro por nombre de usuario -->
            <Label text="Username" />
            <TextField fx:id="fieldUsername" promptText="Enter username to filter" />

            <!-- Filtro por rol -->
            <Label text="Role" />
            <ComboBox fx:id="comboRole" promptText="Select role" prefWidth="250">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="ROLE_ADMIN" />
                        <String fx:value="ROLE_USER" />
                        <String fx:value="ROLE_WAREHOUSE" />
                        <String fx:value="ROLE_MANAGER" />
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Botón para aplicar el filtro -->
            <Button text="FILTER USERS" onAction="#onFilterUsers"
                    style="-fx-background-color: #00c000; -fx-text-fill: white;" />

            <!-- Aquí podrías agregar un ListView o TableView para mostrar los resultados -->
            <TableView fx:id="tableUsers">
                <columns>
                    <TableColumn text="Username" />
                    <TableColumn text="First Name" />
                    <TableColumn text="Last Name" />
                    <TableColumn text="Role" />
                    <TableColumn text="Department" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Botón volver -->
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="← BACK" onAction="#onBack" />
        </HBox>
    </bottom>
</BorderPane>
