<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adama_ui.User.UserManagementController"
            maxWidth="Infinity" maxHeight="Infinity">


    <!-- Formulario de filtro -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Filter Users" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Filtro por nombre de usuario -->
            <Label text="Username"/>
            <TextField fx:id="fieldUsername" promptText="Enter username to filter"/>

            <!-- Filtro por rol -->
            <Label text="Role"/>
            <ComboBox fx:id="comboRole" promptText="Select role" prefWidth="250">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="ROLE_ADMIN"/>
                        <String fx:value="ROLE_USER"/>
                        <String fx:value="ROLE_WAREHOUSE"/>
                        <String fx:value="ROLE_MANAGER"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Button text="FILTER USERS" onAction="#onFilterUsers"
                    style="-fx-background-color: #00c000; -fx-text-fill: white;"/>

            <TableView fx:id="tableUsers">
                <columns>
                    <TableColumn text="Username" fx:id="colUsername"/>
                    <TableColumn text="Nombre" fx:id="colFirstName"/>
                    <TableColumn text="Apellido" fx:id="colLastName"/>
                    <TableColumn text="Rol" fx:id="colRole"/>
                    <TableColumn text="Departamento" fx:id="colDepartment"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
