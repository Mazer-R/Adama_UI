<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adama_ui.User.AddUserController"
            maxWidth="Infinity" maxHeight="Infinity">

    <!-- Lateral izquierdo con botones -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="ADD USER" maxWidth="150" onAction="#onSaveUser" />
            <Button text="USER MANAGEMENT" maxWidth="150"
                    onAction="#onGoToUserManagement"
                    style="-fx-border-color: green; -fx-border-width: 2;" />
        </VBox>
    </left>

    <!-- Formulario -->
    <center>
        <VBox spacing="15" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Add New User" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <Label text="Username*" />
            <TextField fx:id="fieldUsername" promptText="Enter username" />

            <Label text="Password*" />
            <PasswordField fx:id="fieldPassword" promptText="Enter password" />

            <Label text="First Name*" />
            <TextField fx:id="fieldFirstName" promptText="Enter first name" />

            <Label text="Last Name*" />
            <TextField fx:id="fieldLastName" promptText="Enter last name" />

            <Label text="Department*" />
            <TextField fx:id="fieldDepartment" promptText="Enter department" />

            <Label text="Supervisor ID" />
            <TextField fx:id="fieldSupervisorId" promptText="Enter supervisor ID (optional)" />

            <Label text="Role*" />
            <ComboBox fx:id="comboRole" promptText="Select role" prefWidth="250">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="ROLE_ADMIN" />
                        <String fx:value="ROLE_USER" />
                        <String fx:value="ROLE_WAREHOUSE" />
                        <String fx:value="ROLE_MANAGER" />
                    </FXCollections>
                </items>
            </ComboBox>

            <Button text="SAVE USER" onAction="#onSaveUser"
                    style="-fx-background-color: #00c000; -fx-text-fill: white;" />
        </VBox>
    </center>

    <!-- Botón volver -->
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="← BACK" onAction="#onBack" />
        </HBox>
    </bottom>
</BorderPane>
